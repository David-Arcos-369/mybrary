<h3> Search Authors</h3>
<form action="/authors" method="GET">
   <label>Name</label>
   <input type="text"
   name="search"
   placeholder="Search by name"
   value="<%= searchOptions.name %>"
    >
   <button type="submit">Search</button>
</form>
<br>
<h4> Authors List</h4>
<% authors.forEach(author => { %>
   <div>
      <%= author.name %>
   </div>
   <% }) %>